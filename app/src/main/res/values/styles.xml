<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.DressDen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.DressDen.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.DressDen.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DressDen.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DressDen.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.DressDen.Button</item>
    </style>

    <!-- No ActionBar theme -->
    <style name="Theme.DressDen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.DressDen.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.015625</item>
    </style>

    <style name="TextAppearance.DressDen.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.00833333333</item>
    </style>

    <style name="TextAppearance.DressDen.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

    <style name="TextAppearance.DressDen.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0.0178571429</item>
    </style>

    <style name="TextAppearance.DressDen.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.0892857143</item>
    </style>

    <!-- Common Widget Styles -->
    <style name="Widget.DressDen.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:textAppearance">@style/TextAppearance.DressDen.Button</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.DressDen.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">56dp</item>
        <item name="android:textAppearance">@style/TextAppearance.DressDen.Button</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.DressDen.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="Widget.DressDen.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.DressDen.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemRippleColor">@color/ripple</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.DressDen.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
</resources>
